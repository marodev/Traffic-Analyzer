<form stylesheet="customStyle.css">
  <label>Security</label>
  <search id="security_base_search">
    <query>$source_token$ | table source, tcp_stream, cipher_suite, cipher_suite_number, tls_ssl_version_negotiated</query>
  </search>
  <fieldset submitButton="false" autoRun="true">
    <input type="multiselect" token="source_token" searchWhenChanged="true">
      <label>Choose capture file:</label>
      <default>*</default>
      <prefix>(sourcetype=capture </prefix>
      <suffix>)</suffix>
      <valuePrefix>source="</valuePrefix>
      <valueSuffix>"</valueSuffix>
      <delimiter> OR </delimiter>
      <choice value="*">ALL</choice>
      <fieldForLabel>source</fieldForLabel>
      <fieldForValue>source</fieldForValue>
      <search>
        <query>sourcetype=capture
              | dedup source
              | table source
        </query>
      </search>
    </input>
  </fieldset>
  <row>
    <panel>
      <single>
        <title>Total number of tcp streams</title>
        <search base="security_base_search">
          <query>where tcp_stream!=""
                | dedup tcp_stream, source
                | table tcp_stream, cipher_suite
                | stats dc(tcp_stream) as "# of streams"
          </query>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="drilldown">none</option>
        <option name="numberPrecision">0</option>
        <option name="showSparkline">0</option>
        <option name="showTrendIndicator">0</option>
        <option name="useColors">0</option>
        <option name="useThousandSeparators">1</option>
      </single>
    </panel>
    <panel>
      <single>
        <title>Number of inadvisable cipher suites used</title>
        <search base="security_base_search">
          <query>dedup cipher_suite_number
                | join cipher_suite_number
                    [ search source=cipher_suites.csv ]
                | table cipher_suite_number, recommended
                | stats count as amount by recommended
                | where recommended="N"
                | table amount
                | appendpipe [stats count | where count=0]
          </query>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="drilldown">none</option>
        <option name="numberPrecision">0</option>
        <option name="showSparkline">0</option>
        <option name="showTrendIndicator">0</option>
        <option name="useColors">0</option>
        <option name="useThousandSeparators">1</option>
      </single>
    </panel>
    <panel>
      <single>
        <title>Amount of unsecured traffic (by packets)</title>
        <search base="security_base_search">
          <query>eval issecure=if(cipher_suite_number=="","no","yes")
                | table issecure
                | top issecure
                | where issecure="no"
                | table percent
          </query>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="drilldown">none</option>
        <option name="numberPrecision">0.00</option>
        <option name="showSparkline">0</option>
        <option name="showTrendIndicator">0</option>
        <option name="unit">%</option>
        <option name="unitPosition">after</option>
        <option name="useColors">0</option>
        <option name="useThousandSeparators">1</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Commonly used cipher suites</title>
        <search base="security_base_search">
          <query>dedup tcp_stream, source
                | stats count as "# of streams" by cipher_suite_number
                | join cipher_suite_number
                   [ search sourcetype=list source="*cipher_suites.csv" ]
                | table cipher_suite_number, description, recommended, "# of streams"
                | rename cipher_suite_number as "Nr.", description as Description, recommended as Recommended
                | sort "# of streams" desc
          </query>
        </search>
      </table>
    </panel>
    <panel>
      <table>
        <title>Commonly used SSL/TLS version</title>
        <search base="security_base_search">
          <query>dedup tcp_stream, source
                | stats count as "# of streams" by tls_ssl_version_negotiated
                | join tls_ssl_version_negotiated
                   [search sourcetype=list source="*tls-versions.csv"
                      | rename tls_record_version as tls_ssl_version_negotiated]
                | table tls_ssl_version_negotiated, description, "# of streams"
                | rename tls_ssl_version_negotiated as "Version", description as Description
                | sort "# of streams" desc
          </query>
        </search>
      </table>
    </panel>
  </row>
</form>